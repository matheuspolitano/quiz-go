package main

import (
	"bufio"
	"fmt"
	"os"

	"github.com/spf13/cobra"
)

var rootCmd = &cobra.Command{
	Use:   "quiz",
	Short: "A CLI application for country information quizzes",
	Long:  "quiz a terminal-based application",
}

var startCmd = &cobra.Command{
	Use:   "start",
	Short: "Start the countries quiz",
	Run: func(cmd *cobra.Command, args []string) {
		testQuiz()
	},
}

func init() {
	rootCmd.AddCommand(startCmd)
}

func main() {
	if err := rootCmd.Execute(); err != nil {
		fmt.Println(err)
		os.Exit(1)
	}
}

func testQuiz() {
	reader := bufio.NewReader(os.Stdin)
	fmt.Println("Test quiz!")
	fmt.Print("Make a choice: ")
	result, _ := reader.ReadString('\n')
	fmt.Printf("You said '%s'\n", result)
}
